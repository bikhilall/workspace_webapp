rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User files rules
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile photos rules
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can view profile photos
      allow write: if request.auth != null && request.auth.uid == userId; // Only profile owner can upload/update
      allow delete: if request.auth != null && request.auth.uid == userId; // Only profile owner can delete
    }
    
    // Post images rules
    match /posts/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read post images
      allow write: if request.auth != null && request.auth.uid == userId; // Only post author can upload
      allow delete: if request.auth != null && request.auth.uid == userId; // Only post author can delete
    }
    
    // Public files rules
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}